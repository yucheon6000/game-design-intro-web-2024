---
interface Props {
    name: string;
    role: string;
}

const { name, role } = Astro.props;
---

<script
    type="module"
    src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"
></script>
<script
    nomodule
    src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>

<div class="profile no-drag">
    <div class="image">
        <img
            width="100%"
            height="0"
        />
    </div>
    <div class="name-and-role">
        <div class="name">{name}</div>
        <div class="role">{role}</div>
    </div>
</div>
<style>
    .profile {
        position: relative;
        width: calc((100% - 3rem) / 4);
        min-width: calc((100% - 3rem) / 4);
        max-width: calc((100% - 3rem) / 4);
        flex: 1 1 calc((100% - 3rem) / 4);
        /* margin-bottom: 16px; 아래쪽 여백 추가 */
        box-sizing: border-box;
    }

    @media (width <= 900px) {
        .profile {
            width: calc((100% - 3rem) / 4);
            min-width: calc((100% - 3rem) / 4);
            max-width: calc((100% - 3rem) / 4);
            flex: 1 1 calc((100% - 3rem) / 4);
        }
    }
    @media (width <= 650px) {
        .profile {
            width: calc((100% - 2rem) / 3);
            min-width: calc((100% - 2rem) / 3);
            max-width: calc((100% - 2rem) / 3);
            flex: 1 1 calc((100% - 2rem) / 3);
        }
    }
    @media (width <= 400px) {
        .profile {
            width: calc((100% - 1rem) / 2);
            min-width: calc((100% - 1rem) / 2);
            max-width: calc((100% - 1rem) / 2);
            flex: 1 1 calc((100% - 1rem) / 2);
        }
    }

    .profile a {
        position: absolute;
        display: block;
        width: 100%;
        height: 100%;
        border-radius: 0.5rem;
        text-decoration: none;
        transition: background-color 0.3s;
        color: #ffffff00;
    }

    .profile a:hover {
        color: white;
        background-color: #00000098;
    }

    .profile a div {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        text-align: center;
        font-size: 0.8rem;
        text-wrap: nowrap;
    }

    .image {
        position: relative;
        width: 100%;
        height: 0;
        border-radius: 0.5rem;
        overflow: hidden;
        background-color: var(--primary);
        margin-bottom: 1.25rem;
    }

    .name-and-role {
        display: flex;
        flex-direction: column;
        row-gap: 0rem;
    }

    .name {
        font-weight: 600;
        font-size: 1.5rem;
        text-wrap: nowrap;
        /* margin-bottom: 0.2rem; */
        text-align: center;
        color: white;
    }

    .role,
    .email {
        font-weight: 400;
        font-size: 0.8rem;
        text-wrap: wrap;
        overflow-wrap: anywhere;
        text-align: center;
    }

    .role {
        color: #efefef;
        margin-rgb(226, 226, 226) -0.2rem;
    }

    .email {
        color: #b5b9c6;
    }
</style>
