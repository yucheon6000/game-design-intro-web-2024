---
interface Props {
    name: string;
    url?: string;
    gameTitle?: string;
}

const { name, url, gameTitle } = Astro.props;
---

<script
    type="module"
    src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"
></script>
<script
    nomodule
    src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>

<div class="profile">
    <div class="image no-drag">
        {
            gameTitle && (
                <a class="profile-link" href={url}>
                    <div>
                        <>
                            <ion-icon name="open" />
                            <br />
                        </>
                        {gameTitle}
                        <br />
                        게임으로 이동
                    </div>
                </a>
            )
        }

        <img
            width="100%"
            src=`/2024/image/profile-images/${name}.jpg`
            onerror="this.style.display='none'"
        />
    </div>
    <div class="name-and-role">
        <div class="name">{name}</div>
    </div>
</div>
<style>
    .profile {
        position: relative;
        width: calc((100% - 4rem) / 5);
        min-width: calc((100% - 4rem) / 5);
        max-width: calc((100% - 4rem) / 5);
        flex: 1 1 calc((100% - 4rem) / 5);
        /* margin-bottom: 16px; 아래쪽 여백 추가 */
        box-sizing: border-box;
    }

    @media (width <= 900px) {
        .profile {
            width: calc((100% - 3rem) / 4);
            min-width: calc((100% - 3rem) / 4);
            max-width: calc((100% - 3rem) / 4);
            flex: 1 1 calc((100% - 3rem) / 4);
        }
    }
    @media (width <= 650px) {
        .profile {
            width: calc((100% - 2rem) / 3);
            min-width: calc((100% - 2rem) / 3);
            max-width: calc((100% - 2rem) / 3);
            flex: 1 1 calc((100% - 2rem) / 3);
        }
    }
    @media (width <= 400px) {
        .profile {
            width: calc((100% - 1rem) / 2);
            min-width: calc((100% - 1rem) / 2);
            max-width: calc((100% - 1rem) / 2);
            flex: 1 1 calc((100% - 1rem) / 2);
        }
    }

    .image {
        position: relative;
        width: 100%;
        height: auto;
        aspect-ratio: 4 / 5;
        border-radius: 0.5rem;
        overflow: hidden;
        background-color: var(--primary);
        margin-bottom: 0.8rem;
    }

    .name {
        font-size: 1.125rem;
        text-wrap: nowrap;
        text-align: center;
        /* margin-bottom: 0.2rem; */
    }

    .profile a {
        position: absolute;
        display: block;
        width: 100%;
        height: 100%;
        border-radius: 0.5rem;
        text-decoration: none;
        transition: background-color 0.3s;
        color: #ffffff00;
    }

    .profile a:hover {
        color: white;
        background-color: #00000098;
    }

    .profile a div {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        text-align: center;
        font-size: 0.8rem;
        text-wrap: nowrap;
    }

    .image {
        position: relative;
        width: 100%;
        height: auto;
        aspect-ratio: 4 / 5;
        border-radius: 0.5rem;
        overflow: hidden;
        background-color: var(--primary);
        margin-bottom: 1.25rem;
    }
</style>
