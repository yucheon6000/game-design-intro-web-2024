---
interface Props {
    title: string;
    subtitle: string;
    fileName: string;
    url?: string;
    border: boolean;
}

const { title, subtitle, fileName, url, border } = Astro.props;
---

<a href={url} target="_blank">
    <div class="project">
        <div class="image-container">
            <img
                src=`/2024/image/media/${fileName}`
                width="100%"
                class="image front"
                style={border ? "border: var(--primary) solid 0.1px;" : ""}
            />
        </div>
        <div class="titles">
            <div class="title">{title}</div>
            <div class="subtitle">{subtitle}</div>
        </div>
    </div>
</a>

<style>
    a {
        text-decoration: none;
    }

    .project {
        position: relative;
        /* width: calc((100% - 75px) / 4);
        min-width: calc((100% - 75px) / 4);
        max-width: calc((100% - 75px) / 4); */
        /* flex: 1 1 calc((100% - 75px) / 4); */
        width: 100%;
        /* margin-bottom: 0.2rem; */
        /* box-sizing: border-box; */
        color: var(--black);
        display: flex;
        flex-direction: row;
        /* background-color: red; */
        padding: 2rem;
        padding-left: 40rem;
        flex-wrap: wrap;
        border-bottom: 1px var(--primary) solid;
    }

    .image-container {
        position: relative;
        /* width: 100%; */
        height: auto;
        aspect-ratio: 1 / 1.414;
        margin-bottom: 20px;
    }

    .image {
        position: absolute;
        width: 100%;
        aspect-ratio: 1 / 1.414;
        object-fit: cover;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        border-radius: 8px;
        transition: width 0.3s ease;
        will-change: transform width;
    }

    .project:hover .image {
        width: 105%;
        transition: width 0.3s ease;
        will-change: transform width;
    }

    .titles {
        width: auto;
        position: relative;
    }

    .title {
        font-size: 20px;
        overflow-x: hidden;
        text-overflow: ellipsis;
        word-wrap: break-word;
        white-space: nowrap;
    }

    .subtitle {
        font-size: 12px;
    }

    @media (width <= 900px) {
        .project {
            width: calc((100% - 50px) / 3);
            min-width: calc((100% - 50px) / 3);
            max-width: calc((100% - 50px) / 3);
            flex: 1 1 calc((100% - 50px) / 3);
        }
    }
    @media (width <= 650px) {
        .project {
            width: calc((100% - 25px) / 2);
            min-width: calc((100% - 25px) / 2);
            max-width: calc((100% - 25px) / 2);
            flex: 1 1 calc((100% - 25px) / 2);
        }
    }

    @media (width <= 400px) {
        .project {
            width: 100%;
            min-width: 100%;
            max-width: 100%;
            flex: 1 1 100%;
            /* margin: 0 auto; */
        }
    }
</style>
